<resources>

    <!--
        Base application theme for API 21+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 21+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Material.Light">
        <!-- API 21 theme customizations can go here. -->
        <item name="android:colorPrimaryDark">@color/federation_black</item>
    </style>

    <style name="MainFloatingActionButton" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/main_fab_background</item>
        <item name="android:stateListAnimator">@anim/fab_selector</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="FloatingActionButton" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/floating_action_button_background</item>
        <item name="android:stateListAnimator">@anim/fab_selector</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

</resources>