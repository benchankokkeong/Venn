<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.visionfederation.venn.SquareImageView
        android:id="@+id/imageViewAlbumBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:adjustViewBounds="true"
        android:outlineProvider="paddedBounds"
        android:src="@drawable/photo_album_grid_background" />

    <TextView
        android:id="@+id/photoAlbumNameTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:textColor="@color/federation_white" >
    </TextView>

</FrameLayout>